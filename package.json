{
  "name": "bloom-api",
  "version": "1.0.0",
  "description": "Bloom University's Core API",
  "main": "dist/index.ts",
  "scripts": {
    "build": "webpack --config ./webpack.config.ts",
    "db:update:dump": "node -r tsconfig-paths/register ./node_modules/.bin/mikro-orm schema:update --dump",
    "start:dev": "ts-node-dev -r tsconfig-paths/register src/loaders/index.ts",
    "start": "pm2 start dist/index.js -i max",
    "test": "NODE_ENV=testing mocha --timeout 10000 --exit -r ts-node/register -r tsconfig-paths/register src/**/*.test.ts"
  },
  "engines": {
    "node": "10.13.0",
    "npm": "6.9.0"
  },
  "dependencies": {
    "@mikro-orm/postgresql": "^4.0.3",
    "@sendgrid/mail": "^7.2.6",
    "@slack/web-api": "^5.11.0",
    "@types/bluebird": "^3.5.30",
    "@types/chai": "^4.2.11",
    "@types/deline": "^1.0.1",
    "@types/faker": "^4.1.12",
    "@types/gapi": "0.0.39",
    "@types/helmet": "0.0.47",
    "@types/mjml": "^4.0.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.5",
    "@types/node-schedule": "^1.3.0",
    "@types/pluralize": "0.0.29",
    "@types/shortid": "0.0.29",
    "@types/validator": "^13.0.0",
    "@types/webpack-node-externals": "^1.7.1",
    "apollo-server": "^2.12.0",
    "apollo-server-express": "^2.12.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "bottleneck": "^2.19.5",
    "chai": "^4.2.0",
    "class-validator": "^0.12.2",
    "csvtojson": "^2.0.10",
    "deline": "^1.0.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "googleapis": "^49.0.0",
    "graphql": "^15.3.0",
    "handlebars": "^4.7.6",
    "helmet": "^3.22.1",
    "mikro-orm": "^4.0.3",
    "mjml": "^4.7.1",
    "mocha": "^7.1.1",
    "moment": "^2.25.3",
    "node-cache": "^5.1.2",
    "node-schedule": "^1.3.2",

{
  "compilerOptions": {
    "baseUrl": ".", // Just used for the paths.
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, // Allows the @ decorators used by MikroORM.
    "lib": ["es2018", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/", // Outputs the compiled JS to the /dist folder.
    "paths": {
      // Used for path aliases.
      "@core/*": ["src/core/*"],
      "@entities/*": ["src/entities/*"],
      "@integrations/*": ["./src/integrations/*"],
      "@system/*": ["./src/system/*"],
      "@util/*": ["./src/util/*"],
    },
    "resolveJsonModule": true, // Allows JSON files to be resolved.
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "target": "es2018",
    "typeRoots": ["./node_modules/@types", "src/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"],
}

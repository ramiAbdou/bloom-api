{
  "compilerOptions": {
    "baseUrl": ".", // Just used for the paths.
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, // Allows the @ decorators used by MikroORM.
    "lib": ["es2018", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/", // Outputs the compiled JS to the /dist folder.
    "paths": {
      // Used for path aliases.
      "@constants": ["./src/util/constants.ts"],
      "@core/*": ["./src/core/*"],
      "@entities": ["src/entities/index.ts"],
      "@lg": ["src/util/logger.ts"],
      "@integrations/*": ["./src/integrations/*"],
      "@repos": ["src/entities/repos.ts"],
      "@util/*": ["./src/util/*"]
    },
    "resolveJsonModule": true, // Allows JSON files to be resolved.
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "target": "es2018",
    "typeRoots": ["./node_modules/@types", "src/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
